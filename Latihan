class Mahasiswa 
{
    private String nama;  // Atribut
    private String nim;
    private String jurusan;
    private double ipk;

    public Mahasiswa(String nama, String nim, String jurusan, double ipk) // Constructor
    {
        this.nama = nama;
        this.nim = nim;
        this.jurusan = jurusan;
        this.ipk = ipk;
    }

    public void tampilkanInfo() // Method untuk menampilkan informasi mahasiswa
    {
        System.out.println("Nama    : " + nama);
        System.out.println("NIM     : " + nim);
        System.out.println("Jurusan : " + jurusan);
        System.out.println("IPK     : " + ipk);
    }

    public boolean cekLulus()     // Method untuk mengecek kelulusan
    {
        return ipk >= 3.0;
    }
}

